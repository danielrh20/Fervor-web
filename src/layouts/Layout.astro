---
import Lines from '@/components/Lines.astro';
import '@fontsource-variable/montserrat';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- Meta viewport para asegurar que la página se adapta a móviles -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Evento de alabanza, adoración y palabra de Dios, organizado por IPUC Los Trupillos" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://www.instagram.com/ipuclostrupillos?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" />
    <title>{title}</title>
  </head>
  <body>
    <Lines />
    <!-- Contenedor flexible que mantiene el diseño estético y adaptabilidad -->
    <div class="max-w-screen-xl px-6 md:px-10 pt-40 mx-auto">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Hanson";
    src: url(/public/fonts/Hanson-Bold.ttf) format("truetype");
    font-style: normal;
    font-display: swap;
    font-weight: 700;
  }

  html {
    font-family: "Montserrat Variable", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: #050b21;
  }

  body {
    margin: 0;
    padding: 0;
    font-size: 16px; /* Tamaño base ajustado */
    line-height: 1.5;
    color: #fff; /* Mantiene el color de texto blanco */
  }

  .font-hanson {
    font-family: "Hanson", sans-serif;
  }

  /* Diseño responsivo manteniendo los colores y estilo */
  @media (max-width: 640px) {
    .max-w-screen-xl {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    /* Reducir los márgenes para pantallas pequeñas */
    .px-6 {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .pt-40 {
      padding-top: 2rem; /* Menor espacio superior en pantallas pequeñas */
    }

    /* Ajustes a la tipografía en móviles */
    body {
      font-size: 14px;
    }

    h1, h2, h3, h4, h5, h6 {
      font-size: 1.1rem;
    }
  }
</style>
