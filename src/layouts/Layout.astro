---
import Lines from '@/components/Lines.astro';
import '@fontsource-variable/montserrat';
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="TODO" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Lines />
		<div class="max-w-6xl px-10 pt-40 mx-auto">
		<slot />
	</div>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "Hanson";
		src: url(/public/fonts/Hanson-Bold.ttf) format("truetype");
